<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">


    <ImageView
        android:id="@+id/book_img"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@mipmap/none"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_clear"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="@dimen/dp_10"
        android:lines="1"
        android:maxEms="15"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/book_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_update_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_clear"
        android:padding="5dp"
        android:layout_marginLeft="@dimen/dp_4"
        android:lines="1"
        android:maxEms="15"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/book_name"
        app:layout_constraintLeft_toRightOf="@id/book_img"/>

    <TextView
        android:id="@+id/book_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_clear"
        android:padding="5dp"
        android:layout_marginLeft="@dimen/dp_4"
        app:layout_constraintLeft_toRightOf="@id/book_img"
        app:layout_constraintTop_toBottomOf="@id/book_update_chapter"/>

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_update_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>