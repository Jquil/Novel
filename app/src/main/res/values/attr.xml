<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="icoColor" format="color"/>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="indicator_itemPadding"     format="dimension"/>
        <attr name="indicator_itemSize"        format="dimension"/>
        <attr name="indicator_itemColor"       format="color"/>
        <attr name="indicator_itemSelectColor" format="color"/>
        <attr name="indicator_style"       format="enum">
            <enum name="delta"  value="1"/>
            <enum name="oblong" value="2"/>
        </attr>
        <attr name="indicator_color"  format="color"/>
        <attr name="indicator_height" format="dimension"/>
        <attr name="indicator_width"  format="dimension"/>
    </declare-styleable>


    <declare-styleable name="FlowLayout">
        <attr name="commonBackground"  format="color"/>
        <attr name="clickBackground"   format="color"/>
        <attr name="flowTextColor"     format="color"/>
    </declare-styleable>


    <declare-styleable name="MultipleStatusView">
        <attr name="view_content" format="reference"/>
        <attr name="view_loading" format="reference"/>
        <attr name="view_empty"   format="reference"/>
        <attr name="view_error"   format="reference"/>
    </declare-styleable>
</resources>